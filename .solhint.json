{
    "extends": [
        "solhint:recommended"
    ],
    "plugins": [],
    "rules": {
        "compiler-version": [
            "error",
            "^0.8.25"
        ],
        "avoid-throw": "off",
        "avoid-suicide": "error",
        "avoid-sha3": "warn",
        "func-visibility": [
            "error",
            {
                "ignoreConstructors": true
            }
        ]
    }
}